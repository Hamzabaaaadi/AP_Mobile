# Configuration d'environnement pour le développement

# Sécurité
SECRET_KEY=bus-tracker-dev-secret-key-2024
JWT_SECRET_KEY=jwt-secret-dev-key-2024

# Base de données
# Exemple: pour MySQL avec PyMySQL (remplacez user/password/host/port/dbname)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/bus_tracking_db

# Par défaut (local) la SQLite est utilisée si DATABASE_URL non défini
DATABASE_URL=sqlite:///bus_tracking.db

# Environment
FLASK_ENV=development
FLASK_DEBUG=True

# API Configuration
API_BASE_URL=http://localhost:5000

# GPS Configuration
GPS_UPDATE_INTERVAL=30
PREDICTION_ACCURACY_THRESHOLD=0.85
MAX_OCCUPANCY_HISTORY=100

# CORS (pour développement)
CORS_ORIGINS=*
